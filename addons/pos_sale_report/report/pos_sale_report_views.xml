<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="pos_sale_report_view_pivot" model="ir.ui.view">
         <field name="name">pos.sale.report.pivot</field>
         <field name="model">pos.sale.report</field>
         <field name="arch" type="xml">
            <pivot string="All Channel(s) Sales Analysis">
                <field name="name" type="row"/>
                <field name="price_total" string="Total Price" type="measure"/>
            </pivot>
         </field>
    </record>

    <record id="pos_sale_report_view_search" model="ir.ui.view">
        <field name="name">pos.sale.report.search</field>
        <field name="model">pos.sale.report</field>
        <field name="arch" type="xml">
            <search string="All Channel(s) Sales Analysis">
                 <group expand="1" string="Group By">
                    <filter string="Sales Type" name="sales_type" context="{'group_by':'sotype'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="pos_sale_report_action" model="ir.actions.act_window">
        <field name="name">All Channel(s) Sales Analysis</field>
        <field name="res_model">pos.sale.report</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="pos_sale_report_view_pivot"/>
        <field name="search_view_id" ref="pos_sale_report_view_search"/>
        <field name="context">{'search_default_sales_type': 1}</field>
    </record>

    <menuitem action="pos_sale_report_action" id="pos_sale_report" name="All Channel(s) Sales" parent="sales_team.menu_sale_report"/> 
</odoo>
