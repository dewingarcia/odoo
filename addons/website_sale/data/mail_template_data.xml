<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="recovery_mail" model="mail.template">
            <field name="name">Sales Order - SEND A RECOVERY EMAIL</field>
            <field name="email_from">${(object.user_id.email or '')|safe}</field>
            <field name="subject">You left items in your cart.</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<img src="data:image/png;base64,${user.company_id.logo}" style="width:100px; margin-top:30px;" alt="${user.company_id.name}"/>
<h1 style="color:#A9A9A9;">THERE'S SOMETHING IN YOUR CART.</h1>
<p>Would you like to complete your purchase?</p>
<p>Thank you for shopping with ${user.company_id.name}.</p><br/><br/>
% if object.order_line:
    <table>
        <tr>
          <table width="100%">
            <tr>
              <td style="padding: 10px; width:150px;"></td>
              <td><b>Product Name</b></td>
              <td width="100px"><b>Quantity</b></td>
            </tr>
          </table>
        </tr>
        <tr>
          % for line in object.order_line:
            <table width="100%">
                <tr>
                    <td style="padding: 10px; width:150px;"><img src="data:image/png;base64,${line.product_id.image}" height="100px" width="100px"></img></td>
                    <td>${line.name}</td>
                    <td width="100px">${line.product_uom_qty}</td>
                </tr>
            </table>
          % endfor
      </tr>
    </table>
% endif
<br/><br/>
<center><a href="/shop/cart/${ctx.get('cart_access_token')['%s' % object.id]}" target="_blank" style="background-color: #1abc9c; padding: 20px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;" class="o_default_snippet_text">Resume order</a></center>
            ]]></field>
        </record>
    </data>
</odoo>
